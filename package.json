{
  "name": "@zakodium/adonis-mongodb",
  "version": "0.1.2",
  "description": "MongoDB provider for AdonisJs",
  "main": "./lib/providers/MongodbProvider.js",
  "types": "./lib/src/types.d.ts",
  "files": [
    "lib",
    "templates"
  ],
  "keywords": [
    "adonisjs",
    "adonis",
    "mongo",
    "mongodb",
    "orm",
    "provider"
  ],
  "author": "MichaÃ«l Zasso",
  "license": "MIT",
  "adonisjs": {
    "templates": {
      "basePath": "./templates",
      "config": [
        "config/mongodb.txt"
      ]
    },
    "env": {
      "MONGODB_URL": "mongodb://localhost:27017",
      "MONGODB_DATABASE": "test"
    },
    "types": "@zakodium/adonis-mongodb",
    "providers": [
      "@zakodium/adonis-mongodb"
    ],
    "commands": [
      "@zakodium/adonis-mongodb/lib/commands"
    ]
  },
  "scripts": {
    "clean": "rimraf lib",
    "eslint": "eslint commands providers src --ext ts --cache",
    "eslint-fix": "npm run eslint -- --fix",
    "prepublishOnly": "npm run tsc",
    "test": "npm run eslint",
    "test-coverage": "npm run test-only -- --coverage",
    "test-only": "jest",
    "tsc": "npm run clean && npm run tsc-cjs",
    "tsc-cjs": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zakodium/adonis-mongodb.git"
  },
  "bugs": {
    "url": "https://github.com/zakodium/adonis-mongodb/issues"
  },
  "homepage": "https://github.com/zakodium/adonis-mongodb#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "peerDependencies": {
    "@adonisjs/ace": "6.x.x",
    "@adonisjs/core": "2.x.x",
    "@adonisjs/fold": "6.x.x"
  },
  "devDependencies": {
    "@adonisjs/ace": "^6.7.4",
    "@adonisjs/core": "^2.0.20",
    "@adonisjs/fold": "^6.1.5",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/pluralize": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "eslint": "^6.7.1",
    "eslint-config-cheminfo": "^2.0.4",
    "eslint-config-cheminfo-typescript": "^4.1.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@poppinss/fancy-logs": "^1.3.1",
    "@poppinss/utils": "^2.1.0",
    "@types/mongodb": "^3.3.11",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.15",
    "mongodb": "^3.3.5",
    "pluralize": "^8.0.0"
  }
}
